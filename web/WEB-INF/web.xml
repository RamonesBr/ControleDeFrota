<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ControleFuncionario</servlet-name>
        <servlet-class>Controle.ControleFuncionario</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControleAcesso</servlet-name>
        <servlet-class>Controle.ControleAcesso</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControleVeiculo</servlet-name>
        <servlet-class>Controle.ControleVeiculo</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControleViagem</servlet-name>
        <servlet-class>Controle.ControleViagem</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControleManut</servlet-name>
        <servlet-class>Controle.ControleManut</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ControleFuncionario</servlet-name>
        <url-pattern>/ControleFuncionario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControleAcesso</servlet-name>
        <url-pattern>/ControleAcesso</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControleVeiculo</servlet-name>
        <url-pattern>/ControleVeiculo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControleViagem</servlet-name>
        <url-pattern>/ControleViagem</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControleManut</servlet-name>
        <url-pattern>/ControleManut</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>/login.jsp</welcome-file>
    </welcome-file-list>
</web-app>
